<div class="bookings-container container">
  <div class="row pt-1">
    <div class="col m-2 pb-2 bg-white">
      <h1>Booking Summary</h1>
      <h2 class="dino-info"><%= @dinosaur.name %></h2>
      <h3 class="dino-info2"> <%= @dinosaur.description %>, <%= @dinosaur.age %>, from <%= @dinosaur.origin %> </p>
      <div class="dino-image1">
      <figure>
        <%= cl_image_tag @dinosaur.photo.key, class: "dino-img" %>
      </figure>
    </div>
    </div>
    <div class="col m-2 pb-2 bg-white text-center">
      <h2 class="p-2">Pay Now</h2>
        <%= simple_form_for [@dinosaur,@booking] do |form| %>
          <%= form.label :start_date %>
          <%= form.date_field :start_date, class: "form-control" %>
          <%= form.label :end_date %>
          <%= form.date_field :end_date, class: "form-control" %>
          <%= form.button :submit, "Book Now", class: "btn btn-primary btn-lg" %>
        <% end %>
    </div>
  </div>
</div>


