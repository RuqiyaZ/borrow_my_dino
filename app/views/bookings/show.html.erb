<div class="container">
  <div class="row pt-1">
    <div class="col m-2 pb-2 bg-white">
      <h1>Your Booking has been confirmed</h1>
      <div class="card">
        <%= cl_image_tag @dinosaur.photo.key, class: "dino-img" %>
        <div class="card-body">
          <h2 class="card-title"><%= @dinosaur.name %></h5>
          <h4> Your Dinosaur was booked between: <%= @booking.start_date %> and <%= @booking.end_date %>
        </div>
      </div>
    </div>
    <div class="col m-2 pb-2 bg-white text-center">
      <h3 class="p-2">Your booking Details:</h3>
      <h4 class ="p-2">Booking created at: <%= @booking.created_at %> </h4>
      <h3 class = "p-2">Total Paid: <%= @booking.total_price %> </h4>
      <h4> Thank you for choosing BorrowADino! </h4>
    </div>
  </div>
</div>
